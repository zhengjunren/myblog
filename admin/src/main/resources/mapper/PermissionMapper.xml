<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zhengjunren.myblog.system.mapper.PermissionMapper">
  <resultMap id="BaseResultMap" type="cn.zhengjunren.myblog.system.domain.Permission">
    <!--@mbg.generated-->
    <!--@Table permission-->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="type" jdbcType="INTEGER" property="type" />
    <result column="permission" jdbcType="VARCHAR" property="permission" />
    <result column="method" jdbcType="VARCHAR" property="method" />
    <result column="sort" jdbcType="INTEGER" property="sort" />
    <result column="parent_id" jdbcType="BIGINT" property="parentId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    id, `name`, url, `type`, permission, `method`, sort, parent_id, create_time
  </sql>

  <select id="selectByRoleIdList" resultMap="BaseResultMap">
    SELECT DISTINCT
      permission.*
    FROM
      permission,
      role,
      role_permission
    WHERE
      role.id = role_permission.role_id
      AND permission.id = role_permission.permission_id
      AND role.id IN
    <foreach collection="ids" item="id" index="index" open="(" close=")" separator=",">
    #{id}
    </foreach>
  </select>

  <select id="selectByRoleId" resultMap="BaseResultMap">
    SELECT
      p.*
    FROM
      permission AS p
        LEFT JOIN role_permission AS rp ON p.id = rp.permission_id
    WHERE
      rp.role_id = #{roleId}
  </select>

</mapper>
